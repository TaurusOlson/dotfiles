# afplay -v 100 /System/Library/Sounds/Purr.aiff
if [[ "$@" == *" at "* ]]; then
    msg=$(echo "$@" | awk -F" at " '{print $1}')
    when=$(echo "$@" | awk -F" at " '{print $2}')
else
    msg="$@"
    read -p "When? " when
fi

echo "$msg" | at "$when"
