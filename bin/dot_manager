#!/bin/sh
#
# dot_manager
#
# `dot_manager` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export ZSH=$HOME/.dotfiles


# Set OS X defaults
# $ZSH/osx/set-defaults.sh

# Upgrade homebrew
echo "› brew update"
brew update

# Install homebrew packages
echo "› $ZSH/script/install"
$ZSH/script/install
