#!/bin/bash

# Usage: extract-archive <file>

function usage() {
cat <<EOF
Usage: $(basename $0) <file>

EOF
}

extract() {
    if [ -f $1 ]; then
        case  $1 in
            *.tar.bz2|*.tbz2) tar xjvf $1;;
            *.tar.gz|*.tgz) tar xzvf $1;;
            *.bz2) bunzip2 $1;;
            *.rar) rar x $1;;
            *.gz) gunzip $1;;
            *.zip) unzip $1;;
            *.z) uncompress $1;;
            *) echo "$1 cannot be extracted.";;
        esac
    else
        echo "$1 is not a valid file."
    fi
}


[ $# -eq 1 ] && extract $1 && exit 0
