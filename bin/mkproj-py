#!/bin/bash

function usage() {
    cat <<EOF
Usage: $(basename $0) <PROJECT_NAME>

Make a Python project.
EOF
}

[ $# -ne 1 ] && usage && exit 1
[ $# -eq 1 ] && [ -d $1 ] && usage && echo "Give a valid project name that doesn't already exist."

DIRECTORIES="docs sandbox tests"
PROJECT_NAME="$1"
FILES="$(basename $PROJECT_NAME.py) README.rst __init__.py"

for directory in $DIRECTORIES
do
    mkdir -p $PROJECT_NAME/$directory
done

for file in $FILES
do
    touch $PROJECT_NAME/$file
done

echo "Created the project $PROJECT_NAME."
