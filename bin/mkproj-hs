#!/bin/bash

function usage() {
    cat <<EOF
Usage: $(basename $0) <PROJECT_NAME>

Make a Haskell project.
EOF
}


[ $# -ne 1 ] && usage && exit 1
[ $# -eq 1 ] && [ -d $1 ] && usage && echo "Give a valid project name that doesn't already exist."

PROJECT_NAME="$1"

mkdir -p $PROJECT_NAME/src
touch $PROJECT_NAME/{$(basename $PROJECT_NAME.hs),README,LICENCE}

echo "Created the project $PROJECT_NAME."
