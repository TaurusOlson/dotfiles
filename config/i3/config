bindcode 72 exec xbacklight -dec 20 # decrease screen brightness

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        colors {
            statusline $dark_yellow
            background $background
                              #Border     #Background #Font
            focused_workspace $dark_green $dark_green $dark_black
            inactive_workspace $background $background $dark_green
        }

        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        tray_output primary
}

# MODES

# Window splitter
set $mode_window_splitter Split: [v]ertically [h]orizontally [c]reate
bindsym $mod+o mode "$mode_window_splitter"

mode "$mode_window_splitter" {
    bindsym v split h
    bindsym h split v
    bindsym c exec urxvt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+ctrl+h resize shrink width 1 px or 1 ppt
bindsym $mod+ctrl+k resize grow height 1 px or 1 ppt
bindsym $mod+ctrl+l resize grow width 1 px or 1 ppt
bindsym $mod+ctrl+j resize shrink height 1 px or 1 ppt

# Resize
# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

